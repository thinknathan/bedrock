{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "WordPress boilerplate with modern development tools, easier configuration, and an improved folder structure",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "vcs",
      "url": "https://github.com/thinknathan/wp-disallow-admin-bar"
    },
    {
      "type": "vcs",
      "url": "https://github.com/thinknathan/wp-install-premium-keys"
    },
    {
      "type": "vcs",
      "url": "https://github.com/thinknathan/wp-development-tweaks"
    },
    {
      "type": "vcs",
      "url": "https://github.com/thinknathan/wp-disable-comments"
    },
    {
      "type": "vcs",
      "url": "https://github.com/thinknathan/wp-limit-revisions"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.4",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.8.1",
    "oscarotero/env": "^1.1.0",
    "roots/wp-password-bcrypt": "1.0.0",

    "thinknathan/wp-disallow-admin-bar": "dev-master",
    "thinknathan/wp-install-premium-keys": "dev-master",
    "thinknathan/wp-development-tweaks": "dev-master",
    "thinknathan/wp-disable-comments": "dev-master",
    "thinknathan/wp-limit-revisions": "dev-master",

    "roots/soil": ">=3.4",
    "wpackagist-plugin/super-cpt": "*",
    "wpackagist-plugin/wp-pagenavi": "*",
    "wpackagist-plugin/advanced-excerpt": "*",

    "wpackagist-plugin/force-regenerate-thumbnails": "*",
    "wpackagist-plugin/thumbnail-upscale": "*",

    "wpackagist-plugin/adminimize": "*",
    "wpackagist-plugin/tinymce-advanced": "*",
    "wpackagist-plugin/codepress-admin-columns": "*",
    "wpackagist-plugin/post-types-order": "*",

    "wpackagist-plugin/wordpress-seo": "*",

    "wpackagist-plugin/sucuri-scanner": "*",
    "wpackagist-plugin/relevanssi": "*",
    "wpackagist-plugin/wp-migrate-db": "*",
    "wpackagist-plugin/duplicate-post": "*",
    "wpackagist-plugin/redirection": "*",
    "wpackagist-plugin/really-simple-ssl": "*",
    "wpackagist-plugin/svg-support": "*",
    "wpackagist-plugin/disable-comments": "*"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.0.2"
  },
  "extra": {
    "installer-paths": {
      "../public_html/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "../public_html/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "../public_html/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "../public_html/wp"
  },
  "scripts": {
    "test": [
      "vendor/bin/phpcs"
    ]
  }
}
